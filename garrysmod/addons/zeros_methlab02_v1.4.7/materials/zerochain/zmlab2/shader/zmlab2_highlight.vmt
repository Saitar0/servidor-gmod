"MonitorScreen"
{
	"$basetexture" "zerochain/zmlab2/shader/zmlab2_highlight"
 	"$model" 1
	
	"$additive" "1"


	"$translate" "[0.0 0.0]"
    "$center" "[0.5 0.5]"
	
	"$angle" "0"
	
	"$def_scale" "[1 1]"
	
	"$contrast" "1"
	"$saturation" "1"
	
	"Proxies"
	{
		"LinearRamp"
		{
            "rate" 0.1
            "initialValue" 0.0
            "resultVar" "$translate[1]"
		}
		
        "TextureTransform"
		{
            "translateVar" "$translate"
			"scaleVar"  "$def_scale"
            "rotateVar" "$angle"
            "centerVar" "$center"
            "resultVar" "$basetexturetransform"
		}
	}
}
